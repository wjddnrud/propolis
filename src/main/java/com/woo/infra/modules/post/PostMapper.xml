<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.woo.infra.modules.post.PostMapper">

    <resultMap id="resultMapObj" type="com.woo.infra.modules.post.Post"></resultMap>
	
	<sql id="selectCommon">
		FROM post po
	</sql>
	<!-- paging -->
	<select id="selectOneCount" resultType="Integer">
		SELECT COUNT(*)
		<include refid="selectCommon"/>
	</select>
	
	<select id="selectList" resultMap="resultMapObj">
		<include refid="Base.selectListUpperForMysql"/>
		SELECT
			po.seq
			,po.category
			,mm.id as writer
			,po.title
			,po.contents
			,po.createDate
			,po.modiDate
			,po.viewCount
		<include refid="selectCommon"/>
		JOIN member mm ON mm.seq = po.writer 
		ORDER BY seq DESC
		<include refid="Base.orderByLimitForMysql"/>
		<include refid="Base.selectListLowerForMysql"/>
	</select>
	
	<!-- myPageCommunityList -->
	<select id="MyselectList" resultMap="resultMapObj">
		SELECT
			po.seq
			,po.category
			,mm.id as writer
			,po.title
			,po.contents
			,po.createDate
			,po.modiDate
			,po.viewCount
		FROM post po
		JOIN member mm ON mm.seq = po.writer 
		WHERE 1=1
			AND po.writer = #{writer}
	</select>  
	
	<insert id="insert">
		INSERT INTO post(
			category
			,writer
			,title  
			,contents
		)
		VALUES (
			#{category}
			,#{writer}
			,#{title}
			,#{contents}
		)
	</insert>
	
	<select id="selectOne" resultMap="resultMapObj">
		SELECT
			po.seq
			,po.category
			,mm.id as writer
			,po.title
			,po.contents
			,po.createDate
			,po.viewCount
		From post po
		JOIN member mm ON mm.seq = po.writer 
		WHERE 1=1
			AND po.seq=#{shSeq}
	</select>
	
