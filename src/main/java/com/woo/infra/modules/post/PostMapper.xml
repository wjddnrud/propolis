	<select id="selectCountFromCategory" resultType="Integer" parameterType="Integer">
		SELECT
			COUNT(*)
		FROM post
		WHERE 1=1
			AND category = #{i}
	</select>
	
	<select id="selectCountNewFromCategory" resultType="Integer">
		SELECT
			COUNT(*)
		FROM post
		WHERE 1=1
			AND category = #{category}
			AND createDate LIKE CONCAT ('%',#{createDate},'%')
	</select>
	
	<select id="selectLastSeq" resultType="Integer"> <!-- 마지막 seq 조회 -->
		SELECT
			seq
		FROM post
		ORDER BY seq DESC
		LIMIT 1
	</select>
	
	<insert id="insertPostUpload">
		INSERT INTO uploadedPost (
			<!-- seq -->
			type
			,defaultNY
			,sort
			,originalName
			,uuidName
			,ext
			,size
			,path
			,pSeq
		)
		VALUES (
			<!-- #{seq} -->
			#{type}
			,#{defaultNY}
			,#{sort}
			,#{originalName}
			,#{uuidName}
			,#{ext}
			,#{size}
			,#{path}
			,#{pSeq}
		)
	</insert>
	
	<select id="selectPostImg" resultMap="resultMapObj">
		SELECT
			seq
			,type
			,defaultNY
			,sort
			,originalName
			,uuidName
			,ext
			,size
			,delNY
			,pSeq
			,path
		FROM uploadedPost
		WHERE 1=1
			AND pSeq = #{shSeq}
	</select>
	
