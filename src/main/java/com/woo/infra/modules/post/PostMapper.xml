	<insert id="thumbUp">
		INSERT INTO thumbUp (
			poSeq
			,mmSeq
		)
		VALUES (
			#{shSeq}
			,#{writer}
		)
	</insert>
	
	<delete id="thumbDown">
		DELETE
		FROM thumbUp
		WHERE poSeq = #{shSeq}
			AND mmSeq = #{writer}
	</delete>
	
	<select id="thumbUpList" resultMap="resultMapObj">
		SELECT
			seq
			,poSeq
			,mmSeq
		FROM thumbUp 
		WHERE poSeq = #{shSeq}
	</select>
	

