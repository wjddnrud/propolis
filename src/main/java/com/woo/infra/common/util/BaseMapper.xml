<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Base">
	
	<!-- SQL Upper -->
	<sql id="selectListUpperForMysql">
		SELECT
			aa.* 
		FROM (
	</sql>
	
	<!-- SQL Lower -->
	<sql id="selectListLowerForMysql">	
		)aa
		LIMIT #{rowNumToShow} OFFSET #{startRnumForMysql}
	</sql>
	
	<!-- 많은 데이터를 가져올때 limit이 있어야 잘리지 않고 다 가져올수 있다. -->
	<sql id="orderByLimitForMysql">
		LIMIT 99999999999
	</sql>
	
	 <sql id ="selectCommon">
		FROM cc
		WHERE 1=1
			<if test="shDelNY != null and !shDelNY.equals('')">AND DelNY = #{shDelNY}</if>
			<choose>
				<when test="shOption == 1">AND seq = #{shValue}</when>
				<when test="shOption == 2">AND cc_name LIKE CONCAT('%',#{shValue},'%')</when>
			</choose>
	</sql>
    

</mapper>